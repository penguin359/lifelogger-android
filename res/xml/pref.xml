<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
<EditTextPreference android:key="key" android:title="Title" android:summary="Sum"/>
<CheckBoxPreference android:summaryOff="PhotoCatalog will not run on boot" android:title="Start on Boot" android:summaryOn="PhotoCatalog will start logging on boot" android:key="onBoot"/>
<EditTextPreference android:defaultValue="http://www.example.org/photocatalog/" android:key="url" android:title="Website" android:summary="URL for uploading data to"/>
<EditTextPreference android:summary="in Meters" android:defaultValue="5" android:key="distance" android:title="Minimum Distance"/>
<EditTextPreference android:summary="in Seconds" android:defaultValue="5" android:key="time" android:title="Minimum Time"/>
</PreferenceScreen>

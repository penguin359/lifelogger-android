<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent">
<LinearLayout android:id="@+id/header"
  android:layout_height="wrap_content" android:layout_width="fill_parent">
  <TextView android:layout_weight="2" android:layout_height="fill_parent" android:layout_width="fill_parent" android:width="0px" android:text="@string/time" android:background="@color/uploaded"/>
  <TextView android:layout_weight="3" android:layout_height="fill_parent" android:layout_width="fill_parent" android:width="0px" android:text="@string/latitude" android:background="@color/uploaded"/>
  <TextView android:layout_weight="3" android:layout_height="fill_parent" android:layout_width="fill_parent" android:width="0px" android:text="@string/longitude" android:background="@color/uploaded"/>
</LinearLayout>
<LinearLayout android:id="@+id/footer"
  android:layout_height="wrap_content" android:layout_width="fill_parent"
  android:orientation="horizontal" android:layout_alignParentBottom="true">
  <Button android:id="@+id/delete_but" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:text="@string/delete_all"/>
  <Button android:id="@+id/delete_uploaded_but" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:text="@string/delete_uploaded"/>
</LinearLayout>
<ListView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fastScrollEnabled="true" android:layout_below="@id/header" android:layout_above="@id/footer" android:id="@+id/android:list"/>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/header" android:layout_above="@id/footer" android:id="@+id/android:empty" android:text="@string/no_gps"/>
</RelativeLayout>
